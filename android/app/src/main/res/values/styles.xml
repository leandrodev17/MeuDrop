<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#54626b</item>
        <item name="android:windowBackground">@mipmap/background_splash</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <!-- <item name="android:statuBarColor">#047454</item>  -->
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <!-- <item name="android:background">#fff</item>
        <item name="android:colorPrimary">#54626b</item>
        <item name="android:colorAccent">#54626b</item> -->
        <item name="android:textColorPrimary">#54626b</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#bdbebd</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#047454</item>
    </style>

</resources>
